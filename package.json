{
  "name": "pwa-starter",
  "version": "0.0.1",
  "description": "A starter kit for building PWAs!",
  "main": "index.js",
  "scripts": {
    "build": "tsc && vite build",
    "coverage": "vitest --coverage",
    "deploy": " npx @azure/static-web-apps-cli login --no-use-keychain && npx @azure/static-web-apps-cli deploy",
    "dev": "npx @azure/static-web-apps-cli start http://localhost:3000 --run \"npm run dev-server\"",
    "dev-server": "vite --open",
    "dev-task": "vite",
    "lint": "eslint src/**/*.ts",
    "start": "npm run dev",
    "start-remote": "vite --host",
    "test": "vitest"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@vaadin/router": "^1.7.5",
    "idb": "^7.0.2",
    "lit": "^3.0.0",
    "workbox-build": "^6.5.2",
    "workbox-core": "^6.5.2",
    "workbox-precaching": "^7.0.0"
  },
  "devDependencies": {
    "@types/dom-screen-wake-lock": "^1.0.0",
    "@typescript-eslint/eslint-plugin": "^5.33.0",
    "@typescript-eslint/parser": "^5.62.0",
    "c8": "^8.0.1",
    "eslint": "^8.22.0",
    "jsdom": "^20.0.0",
    "typescript": "^4.6.3",
    "vite": "^2.9.16",
    "vite-plugin-pwa": "^0.11.13",
    "vitest": "^0.21.1"
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "quoteProps": "consistent",
    "trailingComma": "es5",
    "endOfLine": "crlf",
    "bracketSpacing": true
  }
}
